<% layout("/layouts/boilerplate") %>
  <body>
    <!-- <h3>Listing Details :</h3>  -->
    <br> 
    <h4><%= listing.title %></h4>
    <br>
    <img src="<%= listing.image %>" class="card-img-top" 
    alt="listing_image" style="height : 20rem" >

  </br> </br>
    <ul>
      <!-- <li><%= listing.title %></li> -->
      <li><%= listing.description %></li>
      <li>&#8377; <%= listing.price.toLocaleString("en-IN") %>  </li>
      <li><%= listing.location %></li>
      <li><%= listing.country %></li>
    </ul>
    <br />
    <a href="/listings/<%= listing._id %>/edit"  class="btn btn-dark"> Edit Abode Info</a>
    
    <BR></BR>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-danger"> Delete Abode listing</button>
    </form>

  

    <!-- for REVIEW 30 APR 2024 -->
    <div class="col-8 offset-2 mb-3">
      <br>      <hr/>     <h4> Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" 
        class="mb-3 mt-3" >

        <div class="mb-3">
          <label for="rating" class="form-label" ><b>Rating</b></label>
        <fieldset class="starability-slot"  >
          <!-- <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." /> -->
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible"> 1 star &nbsp;&nbsp;</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars &nbsp;&nbsp;</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars &nbsp;&nbsp;</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars &nbsp;&nbsp;</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars &nbsp;&nbsp;</label>
          
        </fieldset>
        </div>

        <div >
          <label for="comment" class="form-label"> <b>Comments</b>  </label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" 
          class="form-control"  required></textarea>
          <div class="invalid-feedback">
            please submit some comments for review 
          </div>
        </div>
        </BR>
        <button class="btn btn-outline-dark"> Submit </button>
      </form>

      <hr>
      <!-- <h4>All Reviews  </h4> -->
      <p><b>All Reviews</b></p>
      <div class="row">
      <!-- <ul>
        <% for(review of listing.reviews) { %>
          <li> <%= review.comment%> , <%= review.rating %> stars </li>
        <% } %>
      </ul> -->
      <!-- <p><%= listing.reviews %></p> -->
      <% for(review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3"> 
          <div class="card-body " >
            <h5 class="card-title">User name</h5>
            <ul>
              <li> <p class="card-text"> <%= review.comment %> </p> </li>
              <li> <p class="card-text"> <%= review.rating %> stars  </p> </li>
            </ul>
            <!-- <p class="card-text"> <%= review.comment %> </p>
            <p class="card-text"> <%= review.rating %> stars  </p> -->
          </div>
          <form  class="mb-3" method="POST" 
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
            <button class=" btn btn-sm btn-dark mb-3">Delete review</button>
          </form>
        </div>
      <% } %>
    </div>  


    </div>

  </div>
  </body>










