    <% layout("/layouts/boilerplate") %>
  <div class="row">
    <div class="col-10 offset-1" >
      <br>
    <h3>Create a New Abode Listing</h3>

    <form method="POST" action="/listings"   novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class = "form-label"><b>Title:</b></label>
        <input name="listing[title]" placeholder="enter title" type="text" 
            class="form-control" required/>  
      </div>
      <!-- <label for="title" class = "form-label">Title</label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control"/> -->
      
      <!-- <br /> -->

      <div class="mb-3">
        <label for="description" class = "form-label"><b>Description:</b></label>
        <textarea name="listing[description]" placeholder="enter description" 
            class="form-control" required>  </textarea>
      </div>
      
       <!-- <br /> -->
      
      <div class="mb-3">
        <label for="image" class = "form-label"><b>Image link:</b></label>
        <input name="listing[image]" placeholder="enter image URL/Link" type="text" 
            class="form-control"  required />
      </div>
      
       <!-- <br /> -->
      
      <div class="mb-3">
        <label for="price" class = "form-label"><b>Price:</b></label>
        <input name="listing[price]" placeholder="enter price" type="number" 
          class="form-control" required/>
          <div class="invalid-feedback"> Price should be Numeric</div>
      </div>
      
       <!-- <br /> -->
      
      <div class="mb-3">
        <label for="country" class = "form-label"><b>Enter country:</b></label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control"  required/>
      </div>
      
       <!-- <br /> -->
      
      <div class="mb-3">
        <label for="location" class = "form-label"><b>Enter location:</b></label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
      </div>
      
       <!-- <br /> -->
      
      <button class="btn btn-dark">Add Abode</button>
    </form>

  </div> 
  </div> 
